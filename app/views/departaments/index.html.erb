<h3 class="title">Departamentos</h3>

<%= search_form_for @search, url: departaments_url do |f| %>
  <div class="row">
    <div class="offset-md-1 col-md-3">
      <%= f.text_field :code_cont, placeholder:"Código", class:"form-control" %>
    </div>
    <div class="offset-md-1 col-md-3">
      <%= f.text_field :name_cont, placeholder:"Nombre", class:"form-control" %>
    </div>
    <div class="offset-md-1 col-md-3">
      <%= button_tag(type: 'submit', class:"offset-md-6 minibtn btn-default m-1") do %>
        <span class="fa fa-search"></span>
      <% end %>
      <%= link_to new_departament_path, class:"offset-md-6 minibtn btn-default m-1" do %>
        <span class="fa fa-plus"></span>
      <% end %>
    </div>
  </div>
<% end %>

<br />

<div class="container-fluid p-30">
  <table class="table table-responsive-sm">
    <thead class="darkgreen">
      <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th></th>
        <th colspan="4"></th>
      </tr>
    </thead>

  <tbody>
    <tbody>
      <% @departaments.each do |departament| %>
        <tr>
          <td><%= departament.code %></td>
          <td><%= departament.name %></td>
          <td></td>
          <td><%= link_to 'Editar', edit_departament_path(departament) %></td>
          <td><%= link_to 'Borrar', departament, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </tbody>
</table>

<hr />

<br>
<div class="floatRight">
  <%= will_paginate @departaments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, class:"pagination-lg" %>
</div>

<br>

<%= link_to 'Volver', coordinator_lists_path, class:"btn btn-default" %>
