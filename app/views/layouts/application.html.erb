<!DOCTYPE html>
<html>
  <head>
    <title>Registro Único GPJ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Josefin+Slab" />
    <link rel="stylesheet" type="text/css" href='https://fonts.googleapis.com/css?family=Arvo'>
    <link rel="stylesheet" type="text/css" href='https://fonts.googleapis.com/css?family=Lato'>
  </head>

  <body>

    <div class="row p-30 ">
      <div class="offset-lg-1 col-lg-10 shadow p-0">
        <nav class="navbar navbar-expand-md nav-bg navbar-dark sticky-top">
          <%= link_to index_home_path, class:"navbar-brand"  do%>
            <!--h3>PREVISORA</h3-->
            <%= image_tag("invisible.gif", width:"200px",  alt:"previsora", style:"margin-left: 10px") %>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar"  style="align-self: flex-start; margin-top:10px">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="collapsibleNavbar" class="collapse navbar-collapse" style="align-self: flex-start; margin-top:10px">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to current_user.name, coordinator_edit_path(current_user), class:"nav-link" %></li>
                <li class="nav-item"><%= link_to "CERRAR SESIÓN", destroy_user_session_path, method: :delete, class:"nav-link"  %></li>
              <% else %>
                <li class="nav-item"><!--%= link_to "Registrarse", new_user_registration_path, class:"link-inverse"  %--></li>
                <li class="nav-item"><!--%= link_to "Iniciar Sesión", new_user_session_path, class:"link-inverse"  %--></li>
              <% end %>
            </ul>
          </div>
        </nav>

        <!--div class="fw" style="height:150px; overflow:hidden">
          <%= image_tag("bannerprevisora.jpg", width:"100%", height:"150px", style:"position:absolute; z-index:-1") %>
          <ul class="right p-15">
            <% if user_signed_in? %>
              <%= link_to "INICIO", index_home_path, class:"link-inverse" %>
              <%= link_to current_user.name, coordinator_edit_path(current_user), class:"link-inverse" %>
              <%= link_to "CERRAR SESIÓN", destroy_user_session_path, method: :delete, class:"link-inverse"  %>
            <% else %>
              <!%= link_to "Registrarse", new_user_registration_path, class:"link-inverse"  %-->
              <!--%= link_to "Iniciar Sesión", new_user_session_path, class:"link-inverse"  % >
            <% end %>
          </ul>
        </div-->

        <% if notice %>
          <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong><%= notice %></strong>
          </div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong><%= alert %></strong>
          </div>
        <% end %>
        <div class="m-50-60-30">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
